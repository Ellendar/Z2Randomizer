<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tabs="clr-namespace:CrossPlatformUI.ViewModels.Tabs"
             xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             xmlns:rc="clr-namespace:Z2Randomizer.RandomizerCore;assembly=RandomizerCore"
             xmlns:ui="clr-namespace:CrossPlatformUI"
             xmlns:lang="clr-namespace:Z2Randomizer.CrossPlatformUI.Lang"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="tabs:SpritePreviewViewModel"
             x:Class="CrossPlatformUI.Views.Tabs.SpritePreviewView">
    <Grid ColumnDefinitions="*, *">
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <ComboBox Name="SelectedSprite" assists:ComboBoxAssist.Label="Character Sprite" Theme="{StaticResource MaterialOutlineComboBox}"
					  MaxDropDownHeight="500"
                      ItemsSource="{Binding Options}"
                      SelectedItem="{Binding Sprite}">
                    <ToolTip.Tip><TextBlock Text="{x:Static lang:Resources.CharacterSpriteToolTip}"/></ToolTip.Tip>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="32, *">
                            <Image Grid.Column="0"
                                   Margin="4 2"
                                   Width="32"
                                   Height="64"
                                   Source="{Binding Preview}"
                                   RenderOptions.BitmapInterpolationMode="None" />
                            <TextBlock Grid.Column="1"
                                       Margin="16 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <CheckBox IsChecked="{Binding ChangeItemSprites}" Content="Change Item Sprites">
                <ToolTip.Tip><TextBlock Text="{x:Static lang:Resources.ChangeItemSpritesToolTip}"/></ToolTip.Tip>
            </CheckBox>
            <ComboBox assists:ComboBoxAssist.Label="Tunic Color" Theme="{StaticResource MaterialOutlineComboBox}" SelectedIndex="0"
                      ItemsSource="{Binding Source={x:Static rc:Enums.CharacterColorList}}"
                      SelectedItem="{Binding TunicColor, Converter={x:Static ui:Util.EnumConvert}}">
                <ToolTip.Tip><TextBlock Text="{x:Static lang:Resources.TunicColorToolTip}"/></ToolTip.Tip>
            </ComboBox>
            <ComboBox assists:ComboBoxAssist.Label="Tunic Outline Color" Theme="{StaticResource MaterialOutlineComboBox}" SelectedIndex="0"
                      ItemsSource="{Binding Source={x:Static rc:Enums.CharacterColorList}}"
                      SelectedItem="{Binding OutlineColor, Converter={x:Static ui:Util.EnumConvert}}">
                <ToolTip.Tip><TextBlock Text="{x:Static lang:Resources.TunicOutlineColorToolTip}"/></ToolTip.Tip>
            </ComboBox>
            <ComboBox assists:ComboBoxAssist.Label="Shield Color" Theme="{StaticResource MaterialOutlineComboBox}" SelectedIndex="0"
                      ItemsSource="{Binding Source={x:Static rc:Enums.CharacterColorList}}"
                      SelectedItem="{Binding ShieldColor, Converter={x:Static ui:Util.EnumConvert}}">
                <ToolTip.Tip><TextBlock Text="{x:Static lang:Resources.ShieldColorToolTip}"/></ToolTip.Tip>
            </ComboBox>
            <ComboBox assists:ComboBoxAssist.Label="Beam Sprite" Theme="{StaticResource MaterialOutlineComboBox}" SelectedIndex="0"
                      ItemsSource="{Binding Source={x:Static rc:Enums.BeamSpritesList}}"
                      SelectedItem="{Binding BeamSprite, Converter={x:Static ui:Util.EnumConvert}}">
                <ToolTip.Tip><TextBlock Text="{x:Static lang:Resources.BeamSpriteToolTip}"/></ToolTip.Tip>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock>Sprite Preview</TextBlock>
            <Image MaxHeight="200"
                   Source="{Binding Path=Sprite?.Preview}"
                   RenderOptions.BitmapInterpolationMode="None" />
            <TextBlock Text="{Binding Sprite?.Credit}" />
        </StackPanel>
    </Grid>
</UserControl>
