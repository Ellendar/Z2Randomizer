<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:CrossPlatformUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:HeaderViewModel"
             x:Class="CrossPlatformUI.Views.HeaderView">
    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto">
        <StackPanel Orientation="Vertical">
            <TextBlock>Seed</TextBlock>
            <TextBox Text="{Binding Seed}"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock>Flag String</TextBlock>
            <TextBox Text="{Binding Flags}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
